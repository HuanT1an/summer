#include <stdio.h>
#include <stdlib.h>
#include<math.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	double sum,a;
	int i,n;
	while(scanf("%lf%d",&a,&n)!=EOF) 
	{
		sum=0;
		for(i=0;i<n;i++)
		{
			sum+=a;
			a=sqrt(a);
		}
		printf("%.2lf\n",sum);
	} 
	return 0;
}
