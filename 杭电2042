#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int n,p;
	int s,i,j;
	while(scanf("%d",&n)!=EOF)
	{
		for(i=1;i<=n;i++)
		{
			s=3;
			scanf("%d",&p);
			for(j=1;j<=p;j++)
			{
				s=(s-1)*2;
			}
			printf("%d\n",s);
		}
	}
	return 0;
}
